<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.nestopia"
		name="NES (Nestopia)"
		version="1.48.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.nes" version="1.0.0"/>
		<import addon="game.controller.nes.zapper" version="1.0.0" optional="true"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>NES</platforms>
		<extensions>nes|fds</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Nestopia v1.48-WIP</summary>
		<description>Nestopia is a portable open source NES/Famicom emulator. It is designed to be as accurate as possible and supports a large number of peripherals. The hardware is emulated at cycle-by-cycle granularity, ensuring full support for software that does mid-scanline and other timing trickery.

Supported files: .nes, .fds

Icon credit: Anarkhya (anarkhya.deviantart.com)</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<nofanart>true</nofanart>
	</extension>
</addon>
